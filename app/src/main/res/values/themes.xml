<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Phonepe" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Phonepe.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/phonepe_purple</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Phonepe</item>
    </style>
</resources>